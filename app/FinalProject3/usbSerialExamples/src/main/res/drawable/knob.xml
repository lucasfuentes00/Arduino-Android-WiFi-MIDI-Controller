<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="oval">
            <solid android:color="@color/knob_background" />
            <stroke android:width="2dp" android:color="@color/knob_border" />
            <size android:width="100dp" android:height="100dp" />
        </shape>
    </item>
    <item
        android:left="45dp"
        android:top="20dp"
        android:right="45dp"
        android:bottom="50dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/knob_indicator" />
        </shape>
    </item>
</layer-list>